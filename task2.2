package com.company;
import java.util.Scanner;
class Scratch {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.print("Amount of elements: ");
        int n=in.nextInt();
        int[] arr=new int [n];
        for (int i=0;i<n;i++) {
            System.out.print("Insert the " + i + "st element ");
            arr[i]=in.nextInt();
        }
        System.out.print("Difference= "+ differenceMaxMin(arr));
        
    }
    public static int differenceMaxMin(int[] arr)
    {
        int max=arr[0];
        int min=arr[0];
        for  (int i=0; i<arr.length;i++)
        {
            if (arr[i]>max)
                max=arr[i];
            if(arr[i]<min)
                min=arr[i];
        }
        return max-min;
    }
}
