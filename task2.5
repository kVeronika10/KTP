package com.company;
import java.util.Scanner;
class Scratch {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.print("Insert a float number: ");
        String n=in.nextLine();
        System.out.print("number of cimbols after comma: "+getDecimalPlaces(n));
    }
    public static int getDecimalPlaces(String chislo)
    {
        int index=chislo.indexOf(".");
        int kolvo=0;
        if (index!=-1)
             kolvo=chislo.length()-index-1;
        return kolvo;
    }
}
