        for (int i=0;i<arr1.length;i++)
        {
            //подсчет количества повторяющихся элементов в 1м массиве
            for (int j=i+1;j<arr1.length;j++)
            {
                if (arr1[i]==arr1[j]) {
                    kolvo1 += 1;
                    break;
                }
            }
        }
        unique1-=kolvo1;// вычисление уникальных элементов для 1го массива
        // подсчет количества повторяющихся элементов во 2м массиве
        for (int i=0;i<arr2.length;i++)
        {
            for (int j=i+1;j<arr2.length;j++)
            {
                if (arr2[i]==arr2[j]) {
                    kolvo2 += 1;
                    break;
                }
            }
        }
        unique2-=kolvo2;// вычисление уникальных элементов во 2м массиве
      if (unique1==unique2)
          return true;
       else return false;

    }
